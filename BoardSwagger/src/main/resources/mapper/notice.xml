<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ssafy.notice">

	<select id="getNotice" resultType="com.ssafy.edu.dto.Notice">
		SELECT * FROM NOTICE
	</select>
	
	<select id="getNoticeByID" parameterType="java.lang.Integer" resultType="com.ssafy.edu.dto.Notice">
		SELECT * FROM NOTICE WHERE NOTICE_ID = #{notice_id}
	</select>
	
	<insert id="addNotice" parameterType="com.ssafy.edu.dto.Notice">
		INSERT INTO NOTICE(TITLE, CONTENT, NCHECK, DATE) VALUES(#{title}, #{content}, #{ncheck}, #{date})
	</insert>
	
	<delete id="deleteNotice" parameterType="java.lang.Integer">
		DELETE FROM NOTICE WHERE NOTICE_ID = #{notice_id}
	</delete>
</mapper>